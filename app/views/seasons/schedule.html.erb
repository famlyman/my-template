<h2>Matches</h2>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Home Team</th>
      <th>Away Team</th>
    </tr>
  </thead>
  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.date %></td>
        <td><%= match.home_team.name %></td>
        <td><%= match.away_team.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
