<h2>Schedules</h2>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Home Team</th>
      <th>Away Team</th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.date %></td>
        <td><%= schedule.home_team.name %></td>
        <td><%= schedule.away_team.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Generate Matches", generate_matches_season_path(@season), method: :post, class: "btn btn-primary" %>
